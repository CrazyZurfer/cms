<?php echo Form::open(['route' => 'dev.public-views.store']); ?>


<div class="form-group">
	<label>Name</label>
	<input class="form-control" name="name" value="<?php echo e(Input::old('name')); ?>">
	<?php echo $errors->first('name', '<br><div class="alert alert-danger">:message</div>'); ?>

</div>
<div class="form-group">
	<label>Content</label>
	<textarea name="content" class="form-control"><?php echo e(Input::old('content')); ?></textarea>
	<div id="content"/>
	<?php echo $errors->first('content', '<br><div class="alert alert-danger">:message</div>'); ?>

</div>



<hr>
<div class="pull-right">
	<a class="btn btn-default" href="<?php echo URL::route('dev.public-views.index'); ?>">Cancel</a>
	<button class="btn btn-primary">Save</button>
</div>


<style type="text/css" media="screen">
    #content { 
        height: 200px;
    }
</style>
<script src="//cdnjs.cloudflare.com/ajax/libs/ace/1.1.3/ace.js" type="text/javascript" charset="utf-8"></script>
<script>
    var editor = ace.edit("content");
	var textarea = $('textarea[name="content"]').hide();
	editor.getSession().setValue(textarea.val());
	editor.getSession().on('change', function(){
	  textarea.val(editor.getSession().getValue());
	});
</script>

<?php echo Form::close(); ?>