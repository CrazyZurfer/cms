<?php foreach($definitions as $index => $definition): ?>
	<?php if($index != 0): ?>
		<hr>
	<?php endif; ?>

	<div class="row">
		<div class="col-xs-12">
			<a class="pull-right btn btn-default btn-xs" href="<?php echo URL::route('admin.definitions.show', $definition->id); ?>">View</a>
			<p >
				<b><?php echo $definition->identifier; ?></b> <br>
				<span class="text-muted"><?php echo $definition->description; ?></span><br>
				<?php echo $definition->string; ?>

				<?php echo str_limit($definition->text, 100); ?>

				<?php echo $definition->integer; ?>

				<?php if($definition->image_id): ?>
					<img class="img-circle" style="margin-top:10px" src="<?php echo asset($definition->image->thumbnail_xs); ?>">
				<?php endif; ?>
			</p>
		</div>
	</div>

<?php endforeach; ?>

<?php echo $definitions->links(); ?>