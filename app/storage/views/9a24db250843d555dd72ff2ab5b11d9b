<?php if(!$files): ?>
<p><i>No files</i></p>
<?php endif; ?>

<?php foreach($files as $index => $file): ?>
	<span class="pull-right">
		<?php echo Form::open(['route' => ['dev.files.destroy', $index], 'method' => 'delete']); ?>

		<button class="btn btn-danger btn-xs">Delete</button>
		<?php echo Form::close(); ?>

	</span>
	<p>
		<span style="margin-right: 10px"><i class="fa <?php echo FilesHelper::extensionToIcon($file['extension']); ?>"></i></span>
		<span><?php echo $file['name']; ?></span>
	</p>
	<p class="help-block">
		<?php echo asset('uploads/files/' . $file['name']); ?>

	</p>
	<hr>
<?php endforeach; ?>

<a class="btn btn-default" href="<?php echo URL::route('dev.files.create'); ?>">Upload</a>